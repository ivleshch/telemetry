<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpeedView" parent="SpeedView">
        <item name="sv_centerCircleColor">@color/colorPrimaryLight</item>

        <item name="sv_highSpeedColor">@color/colorGreen500</item>
        <item name="sv_mediumSpeedColor">@color/colorYellow500</item>
        <item name="sv_lowSpeedColor">@color/colorRed500</item>

        <item name="sv_indicatorColor">@color/colorPrimaryDark</item>
        <item name="sv_indicatorWidth">@dimen/indicatorWidth</item>

        <item name="sv_markColor">@color/colorPrimaryDark</item>

        <item name="sv_speedTextColor">@color/colorPrimaryDark</item>
        <item name="sv_speedTextFormat">INTEGER</item>
        <item name="sv_speedTextPadding">@dimen/speedTextPadding</item>
        <item name="sv_speedTextPosition">BOTTOM_CENTER</item>
        <item name="sv_speedTextSize">@dimen/text_size_small</item>


        <item name="sv_speedometerWidth">@dimen/speedometerWidth</item>

        <item name="sv_unit">@string/unit</item>
        <item name="sv_unitTextColor">@color/colorPrimaryDark</item>
        <item name="sv_withTremble">false</item>

        <item name="sv_tickNumber">2</item>

        <item name="sv_mediumSpeedPercent">66</item>
        <item name="sv_lowSpeedPercent">33</item>

        <item name="sv_maxSpeed">100</item>
        <item name="sv_minSpeed">0</item>

    </style>


</resources>
